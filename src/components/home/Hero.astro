---
import Button from '../common/Button.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Teatro Al Alba',
  subtitle = 'No se trata de contar historias, se trata de formar parte de ellas.'
} = Astro.props;

// Background images from the original site
const backgroundImages = [
  '/images/galeria/61eff2e3-14b4-4426-a72a-ce34591dd9c7/image.jpg',
  '/images/galeria/9b079477-3215-4bdf-8f60-d58f3e07079f/image.jpg',
  '/images/galeria/3bdf7219-c56d-4770-a54c-cb02a6bd99f0/image.jpg',
  '/images/galeria/1ee13acd-dc2a-4b56-b379-6bb96e3782e9/image.jpg',
  '/images/galeria/cf2486db-f9e3-4055-8c4c-aa8250af5c9b/image.jpg',
];
---

<section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden">
  <!-- Background Slideshow -->
  <div class="absolute inset-0" id="hero-slideshow">
    <div class="absolute inset-0 bg-charcoal-950" />

    {backgroundImages.map((image, index) => (
      <div
        class={`hero-slide absolute inset-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? 'opacity-40' : 'opacity-0'}`}
        data-index={index}
      >
        <img
          src={image}
          alt=""
          class="w-full h-full object-cover"
          loading={index === 0 ? 'eager' : 'lazy'}
        />
      </div>
    ))}

    <div class="absolute inset-0 hero-overlay" />
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-7xl font-display font-bold text-white mb-6 animate-fade-in">
      {title}
    </h1>
    <p class="text-lg md:text-xl lg:text-2xl text-cream-200 max-w-3xl mx-auto mb-8 font-serif italic animate-fade-in-delay-1">
      "{subtitle}"
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-delay-2">
      <Button href="/cartelera" size="lg">
        Ver Cartelera
      </Button>
      <Button href="/quienes-somos" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
        Con√≥cenos
      </Button>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

<script>
  function initHeroSlideshow() {
    const slideshow = document.getElementById('hero-slideshow');
    if (!slideshow) return;

    const slides = slideshow.querySelectorAll('.hero-slide') as NodeListOf<HTMLElement>;
    if (slides.length <= 1) return;

    let currentIndex = 0;
    const interval = 5000; // Change image every 5 seconds

    function showNextSlide() {
      // Fade out current slide
      slides[currentIndex].classList.remove('opacity-40');
      slides[currentIndex].classList.add('opacity-0');

      // Move to next slide
      currentIndex = (currentIndex + 1) % slides.length;

      // Fade in next slide
      slides[currentIndex].classList.remove('opacity-0');
      slides[currentIndex].classList.add('opacity-40');
    }

    // Start the slideshow
    const timer = setInterval(showNextSlide, interval);

    // Cleanup on page navigation (for Astro)
    document.addEventListener('astro:before-preparation', () => {
      clearInterval(timer);
    }, { once: true });
  }

  // Initialize on page load
  initHeroSlideshow();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initHeroSlideshow);
</script>
