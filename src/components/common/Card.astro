---
interface Props {
  href?: string;
  class?: string;
  hover?: boolean;
}

const {
  href,
  class: className = '',
  hover = true
} = Astro.props;

const Tag = href ? 'a' : 'div';
const hoverClasses = hover ? 'hover:shadow-xl hover:-translate-y-1' : '';
---

<Tag
  href={href}
  class:list={[
    'block bg-white rounded-2xl shadow-md overflow-hidden transition-all duration-300',
    hoverClasses,
    className
  ]}
>
  <slot />
</Tag>
