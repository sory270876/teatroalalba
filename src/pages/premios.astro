---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const premiosData = await getCollection('premios');
const sortedPremios = premiosData.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Count total premios and nominaciones
let totalPremios = 0;
let totalNominaciones = 0;
sortedPremios.forEach(obra => {
  obra.data.certamenes.forEach(certamen => {
    certamen.premios.forEach(premio => {
      if (premio.tipo === 'premio') totalPremios++;
      else totalNominaciones++;
    });
  });
});

// Prepare data for client-side
const obrasData = sortedPremios.map((obraPremios, index) => {
  const allPremios = obraPremios.data.certamenes.flatMap(c =>
    c.premios.map(p => ({ ...p, certamen: c.nombre }))
  );
  return {
    index,
    obra: obraPremios.data.obra,
    obraSlug: obraPremios.data.obraSlug,
    obraImage: obraPremios.data.obraImage,
    certamenesCount: obraPremios.data.certamenes.length,
    premiosCount: allPremios.filter(p => p.tipo === 'premio').length,
    nominacionesCount: allPremios.filter(p => p.tipo === 'nominacion').length,
    premios: allPremios
  };
});
---

<BaseLayout
  title="Premios"
  description="Reconocimientos y premios obtenidos por Teatro Al Alba en certámenes de toda España."
>
  <!-- Hero -->
  <section class="bg-charcoal-950 text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <span class="text-burgundy-400 font-medium text-sm uppercase tracking-wider">
        Reconocimientos
      </span>
      <h1 class="mt-4 text-4xl md:text-5xl lg:text-6xl font-display font-bold">
        Premios y Nominaciones
      </h1>
      <p class="mt-4 text-lg text-charcoal-300 max-w-2xl mx-auto">
        Más de 40 años de trabajo reconocidos en certámenes de toda España
      </p>
      <div class="mt-8 flex justify-center gap-12">
        <div class="text-center">
          <div class="text-5xl font-display font-bold text-burgundy-400">{totalPremios}</div>
          <div class="text-sm text-charcoal-400 mt-1">Premios</div>
        </div>
        <div class="w-px bg-charcoal-700"></div>
        <div class="text-center">
          <div class="text-5xl font-display font-bold text-burgundy-400">{totalNominaciones}</div>
          <div class="text-sm text-charcoal-400 mt-1">Nominaciones</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Obra Destacada -->
  <section class="py-16 lg:py-20 bg-charcoal-900">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- Featured Obra - Large -->
      <div id="featured-obra" class="max-w-4xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl bg-charcoal-800">
          <div class="grid md:grid-cols-2">
            <!-- Image -->
            <div class="aspect-[3/4] md:aspect-auto">
              <img
                id="featured-image"
                src=""
                alt=""
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Info -->
            <div class="p-8 flex flex-col justify-center">
              <div class="flex items-center gap-2 mb-4">
                <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span id="featured-count" class="text-yellow-400 font-bold text-2xl"></span>
                <span class="text-charcoal-400">premios</span>
              </div>
              <h2 id="featured-title" class="text-3xl md:text-4xl font-display font-bold text-white mb-4"></h2>
              <p id="featured-stats" class="text-charcoal-400 mb-6"></p>
              <a id="featured-link" href="" class="inline-flex items-center gap-2 text-burgundy-400 hover:text-burgundy-300 font-medium transition-colors">
                Ver detalles de la obra
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Thumbnails -->
      <div class="mt-12">
        <p class="text-center text-charcoal-400 mb-6 text-sm">Selecciona otra obra para ver sus premios</p>
        <div class="flex flex-wrap justify-center gap-4">
          {sortedPremios.map((obraPremios, index) => {
            const totalPremiosObra = obraPremios.data.certamenes.reduce((acc, c) =>
              acc + c.premios.filter(p => p.tipo === 'premio').length, 0);

            return (
              <button
                class="obra-thumb group cursor-pointer focus:outline-none"
                data-obra-index={index}
              >
                <div class="relative w-20 h-28 md:w-24 md:h-32 rounded-lg overflow-hidden shadow-lg transition-all duration-300 group-hover:scale-110 group-hover:shadow-xl opacity-60 group-hover:opacity-100">
                  <img
                    src={obraPremios.data.obraImage}
                    alt={obraPremios.data.obra}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-charcoal-950 via-transparent to-transparent"></div>
                  <div class="absolute bottom-2 left-2 right-2">
                    <div class="flex items-center gap-1">
                      <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <span class="text-yellow-400 font-bold text-xs">{totalPremiosObra}</span>
                    </div>
                  </div>
                </div>
              </button>
            );
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- Premios de la Obra Seleccionada -->
  <section class="py-16 lg:py-24 bg-cream-100">
    <div class="container mx-auto px-4 lg:px-8">
      <div id="premios-container" class="max-w-6xl mx-auto">
        <!-- Content will be injected by JavaScript -->
      </div>
    </div>
  </section>

  <!-- Data for JavaScript -->
  <script define:vars={{ obrasData }}>
    window.obrasData = obrasData;
  </script>
</BaseLayout>

<style>
  .obra-thumb.active > div {
    opacity: 1;
    transform: scale(1.1);
    box-shadow: 0 0 0 3px var(--color-burgundy-500);
  }

  .premio-card {
    opacity: 0;
    transform: translateY(2rem);
  }

  .premio-card.animate {
    animation: fadeInUp 0.5s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(2rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .premios-grid.fade-out {
    opacity: 0;
    transform: translateY(-1rem);
    transition: all 0.3s ease-out;
  }

  .premios-grid {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.3s ease-out;
  }
</style>

<script>
  function initPremiosPage() {
    const obrasData = (window as any).obrasData;
    if (!obrasData || !obrasData.length) return;

    const thumbs = document.querySelectorAll('.obra-thumb') as NodeListOf<HTMLElement>;
    const featuredImage = document.getElementById('featured-image') as HTMLImageElement;
    const featuredTitle = document.getElementById('featured-title') as HTMLElement;
    const featuredCount = document.getElementById('featured-count') as HTMLElement;
    const featuredStats = document.getElementById('featured-stats') as HTMLElement;
    const featuredLink = document.getElementById('featured-link') as HTMLAnchorElement;
    const premiosContainer = document.getElementById('premios-container') as HTMLElement;

    let currentIndex = -1;

    function selectObra(index: number) {
      if (index === currentIndex) return;

      const obra = obrasData[index];

      // Update featured section
      featuredImage.src = obra.obraImage;
      featuredImage.alt = obra.obra;
      featuredTitle.textContent = obra.obra;
      featuredCount.textContent = obra.premiosCount.toString();
      featuredStats.textContent = `${obra.certamenesCount} certámenes · ${obra.premiosCount} premios · ${obra.nominacionesCount} nominaciones`;
      featuredLink.href = `/obra/${obra.obraSlug}`;

      // Update thumbnails
      thumbs.forEach((thumb, i) => {
        if (i === index) {
          thumb.classList.add('active');
        } else {
          thumb.classList.remove('active');
        }
      });

      // Fade out current premios
      const currentGrid = premiosContainer.querySelector('.premios-grid');
      if (currentGrid) {
        currentGrid.classList.add('fade-out');
        setTimeout(() => {
          renderPremios(obra);
        }, 300);
      } else {
        renderPremios(obra);
      }

      currentIndex = index;
    }

    function renderPremios(obra: any) {
      const premiosHTML = obra.premios.map((premio: any, i: number) => `
        <div class="premio-card" style="animation-delay: ${i * 60}ms">
          <div class="h-full rounded-xl p-6 shadow-md transition-all hover:shadow-lg hover:-translate-y-1 ${
            premio.tipo === 'premio'
              ? 'bg-white border-l-4 border-yellow-400'
              : 'bg-white/70 border-l-4 border-charcoal-300'
          }">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center ${
                premio.tipo === 'premio' ? 'bg-yellow-100' : 'bg-charcoal-100'
              }">
                ${premio.tipo === 'premio'
                  ? `<svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>`
                  : `<svg class="w-6 h-6 text-charcoal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>`
                }
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold ${premio.tipo === 'premio' ? 'text-charcoal-900' : 'text-charcoal-600'}">
                  ${premio.tipo === 'nominacion' ? '<span class="text-charcoal-400 font-normal">Nom. </span>' : ''}${premio.categoria}
                </p>
                ${premio.persona ? `<p class="text-burgundy-600 font-medium mt-1">${premio.persona}</p>` : ''}
                <p class="text-charcoal-400 text-sm mt-2 line-clamp-2">${premio.certamen}</p>
              </div>
            </div>
          </div>
        </div>
      `).join('');

      premiosContainer.innerHTML = `
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900">
            Galardones de "${obra.obra}"
          </h2>
        </div>
        <div class="premios-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          ${premiosHTML}
        </div>
      `;

      // Trigger animations
      requestAnimationFrame(() => {
        const cards = premiosContainer.querySelectorAll('.premio-card');
        cards.forEach(card => card.classList.add('animate'));
      });
    }

    // Event listeners for thumbnails
    thumbs.forEach((thumb, index) => {
      thumb.addEventListener('click', () => selectObra(index));
    });

    // Select random obra on load
    const randomIndex = Math.floor(Math.random() * obrasData.length);
    selectObra(randomIndex);
  }

  // Initialize on page load
  initPremiosPage();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initPremiosPage);
</script>
