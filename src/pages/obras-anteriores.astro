---
import BaseLayout from '../layouts/BaseLayout.astro';
import ObraCard from '../components/obras/ObraCard.astro';
import { getCollection } from 'astro:content';

const obrasAnteriores = await getCollection('obras', ({ data }) => data.status === 'anterior');
---

<BaseLayout
  title="Obras anteriores"
  description="Explora el repertorio histórico de Teatro Al Alba. Décadas de producciones teatrales."
>
  <!-- Hero -->
  <section class="bg-charcoal-950 text-white py-20 lg:py-28">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <span class="text-burgundy-400 font-medium text-sm uppercase tracking-wider">
        Nuestro repertorio
      </span>
      <h1 class="mt-4 text-4xl md:text-5xl lg:text-6xl font-display font-bold">
        Obras Anteriores
      </h1>
      <p class="mt-4 text-lg text-charcoal-300 max-w-2xl mx-auto">
        Un viaje por nuestra historia a través de las obras que nos han definido
      </p>
    </div>
  </section>

  <!-- Obras Grid -->
  <section class="py-20 lg:py-28 bg-cream-100">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-animate>
        {obrasAnteriores.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).map((obra) => (
          <ObraCard
            title={obra.data.title}
            description={obra.data.description}
            coverImage={obra.data.coverImage}
            author={obra.data.author}
            slug={obra.slug}
            status={obra.data.status}
          />
        ))}
      </div>

      {obrasAnteriores.length === 0 && (
        <div class="text-center py-12">
          <p class="text-charcoal-500 text-lg">
            Próximamente añadiremos nuestro repertorio histórico.
          </p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
